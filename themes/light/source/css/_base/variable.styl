// Color
// color-background = #eee
color-background = #6daedc
color-font = #444
color-meta = #999
color-border = #ddd
color-link = #258fb8
color-link-anti = #ff992a
color-code = #859900
color-selection = #CFE1F3

// Font
// font-default = "Helvetica Neue", "Helvetica", Arial, sans-serif
font-default = "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif
font-serif = "Georgia", serif
// font-mono = Monaco, Menlo, Consolas, Courier New, monospace
font-mono = "Consolas", "Lucida Sans Typewriter","Lucida Console",Monaco,"Bitstream Vera Sans Mono",monospace
// font-title = "Lato", Helvetica Neue, Helvetica, Arial, sans-serif
font-title = "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif

@import url("//fonts.googleapis.com/css?family=Lato:400,400italic")

font-icon = FontAwesome
font-icon-path = 'font/fontawesome-webfont'
font-path = 'font/Hiragino Sans GB W3'

@font-face {
  font-family 'FontAwesome'
  font-style normal
  font-weight normal
  src url(font-icon-path.eot?#iefix) format('embedded-opentype'), url(font-icon-path.woff) format('woff'), url(font-icon-path.ttf) format('truetype'), url(font-icon-path.svg#FontAwesomeRegular) format('svg')
}

// Width
page-width = 1200px